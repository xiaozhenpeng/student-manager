<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/score_review_course_id_cid"
            android:layout_weight="1"
            android:layout_column="1"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="13sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/score_review_course_name_cname"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="13sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/score_review_teacher_number_tid"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="13sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/score_review_teacher_name_tname"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="13sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/score_review_student_grade"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="13sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/score_review_course_ccredit"
            android:layout_weight="4"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="13sp"
            android:textStyle="bold"></TextView>
    </TableRow>
</TableLayout>
